extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user && user.firstName}. Check your details below:
						div.signup-wall
							ul.user-details
								li Username ---> #{user && user.username}
								li Email    ---> #{user && user.email}
								li First Name ---> #{user && user.firstName}
								li Last Name ---> #{user && user.lastName}
						a(href='/signout', class='text-center new-account') Sign Out