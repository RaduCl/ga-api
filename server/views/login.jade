extend layout
block content
    div#logo
    div.mainwrapper
        div.vertical-spacer
        div.row
            div.col-md-4.col-md-offset-4
                div.panel.panel-primary
                    div.panel-heading Login
                    div.panel-body
                        form.form-horizontal(role=form)
                            div.form-group
                                label.col-sm-3.control-label(for="imputEmail")  Email
                                div.col-sm-9
                                    input#inputEmail.form-control(type='email' required='true' placeholder='Email')
                            div.form-group
                                label.col-sm-3.control-label(for="imputPassword")  Password
                                div.col-sm-9
                                    input#inputEmail.form-control(type='password' required='true' placeholder='Password')