extend layout
block content
    div#logo
    div.mainwrapper
        div.vertical-spacer
        div.row
            div.col-md-4.col-md-offset-4
                div.panel.panel-primary
                    div.panel-heading Login
                    div.panel-body
                        form.form-horizontal(role=form action='/login' method='post')
                            fieldset
                                div.form-group
                                    label.col-md-3.control-label(for="inputEmail")  User
                                    div.col-md-9
                                        input#inputEmail.form-control(type='text' required='true' placeholder='User')
                                div.form-group
                                    label.col-sm-3.control-label(for="inputPassword")  Password
                                    div.col-md-9
                                        input#inputPassword.form-control(type='password' required='true' placeholder='Password')
                                button.btn.btn-primary.btn-block(type="submit") Login